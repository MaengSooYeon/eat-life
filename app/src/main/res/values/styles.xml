<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorBlack</item>

        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTextAppearance_date" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="CustomTextAppearance_weekDay" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="CustomTextAppearance_header" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorBlack</item>
    </style>
</resources>