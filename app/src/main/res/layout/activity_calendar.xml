<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:mcv_showOtherDates="none"
        app:mcv_tileSize="match_parent"
        app:mcv_tileWidth="match_parent"
        app:mcv_tileHeight="match_parent"

        app:mcv_selectionColor="#FF9800"
        app:mcv_leftArrowMask = "@drawable/back"
        app:mcv_rightArrowMask = "@drawable/next"
        app:mcv_monthLabels="@array/custom_months"
        app:mcv_weekDayLabels="@array/custom_weekdays"
        app:mcv_dateTextAppearance="@style/CustomTextAppearance_date"
        app:mcv_weekDayTextAppearance="@style/CustomTextAppearance_weekDay"
        app:mcv_headerTextAppearance="@style/CustomTextAppearance_header"
        />
